pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "exit \$((RANDOM % 2))"
            }
        }
    }
    post {
    	always {
		echo 'I will always say Hello again!'
	}
	sucess {
		echo 'I will always say Hello again!'
	}
	failure {
		echo 'I will always say Hello again!'
	}
    }
}
